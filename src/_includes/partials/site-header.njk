<header class="site-header">
  <div class="site-header__container">
    <span class="site-header__logo-container">
      <a class="site-header__logo" href="{{ '/' | url }}" aria-label="Logo">
        {{ global.logo | svg | safe }}
      </a>
    </span>
    <button
      class="site-header__mobile-nav"
      data-drawer-trigger=""
      aria-controls="drawer-name"
      aria-expanded="false"
    >
      <span class="site-header__mobile-nav-label">Menu</span>
      {{ global.menu_icon | svg | safe }}
    </button>
    <nav class="site-header__nav">
      {% set navPages = collections.all | eleventyNavigation %}
      <ul class="site-header__items">
        {%- for entry in navPages %}
          <li class="site-header__item">
            <a
              class="site-header__link"
              href="{{ entry.url | url }}"
              {% if entry.url == page.url %} aria-current data-current="current item"{% endif %}
            >
              {{ entry.title }}
            </a>
          </li>
        {%- endfor %}
      <li class="site-header__item">
        <a class="site-header__link" href="https://github.com/tammmatTLU" target="_blank" rel="noopener">
          <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12 .5C5.73.5.5 5.74.5 12.02c0 5.1 3.29 9.42 7.86 10.96.58.1.8-.26.8-.58v-2.1c-3.2.7-3.88-1.4-3.88-1.4-.52-1.32-1.27-1.67-1.27-1.67-1.04-.72.08-.7.08-.7 1.15.08 1.75 1.18 1.75 1.18 1.02 1.75 2.66 1.24 3.3.95.1-.74.4-1.24.74-1.53-2.56-.3-5.26-1.28-5.26-5.7 0-1.26.44-2.3 1.17-3.1-.1-.28-.5-1.43.1-2.98 0 0 .96-.31 3.15 1.17a10.91 10.91 0 012.88-.38c.98 0 1.96.13 2.88.38 2.2-1.48 3.15-1.17 3.15-1.17.6 1.55.2 2.7.1 2.98.74.8 1.17 1.84 1.17 3.1 0 4.44-2.7 5.4-5.27 5.7.42.36.78 1.1.78 2.22v3.3c0 .32.2.7.8.58a10.53 10.53 0 007.86-10.96C23.5 5.74 18.27.5 12 .5z"/>
          </svg>
        </a>
      </li>

        {% if global.enable_theme_switch %}
          <li class="site-header__item">
            <button class="site-header__link site-header__link--theme-switch" data-theme-switch>
              {{ global.switch_theme_icon | svg | safe }}
            </button>
          </li>
        {% endif %}
      </ul>
    </nav>
  </div>
</header>
